pipeline {
    agent any

    parameters {
        choice(
            name: 'VERSION_BUMP',
            choices: ['patch', 'minor', 'major'],
            description: 'Select which version part to bump for this build'
        )
        choice(
            name: 'SERVICE',
            choices: ['orders', 'notifications', 'payments'],
            description: 'Select which app to build from the repo'
        )
    }

    environment {
        GITHUB_REPO = 'https://github.com/ranenachiket/k8s-app.git'
        DOCKERHUB_USER = 'ranenachiket07'
        VERSION_FILE = 'VERSION'
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main',
                    url: "${env.GITHUB_REPO}",
                    credentialsId: 'github-creds'
            }
        }

        stage('Calculate Next Version') {
            steps {
                dir("apps/${params.SERVICE}") {
                    script {
                        // Read current version (default to v0.0.0 if missing)
                        def versionFile = fileExists(env.VERSION_FILE) ? readFile(env.VERSION_FILE).trim() : 'v0.0.0'
                        def (major, minor, patch) = versionFile.replace('v','').tokenize('.').collect { it.toInteger() }

                        // Increment based on dropdown
                        if (params.VERSION_BUMP == 'major') {
                            major += 1; minor = 0; patch = 0
                        } else if (params.VERSION_BUMP == 'minor') {
                            minor += 1; patch = 0
                        } else {
                            patch += 1
                        }

                        env.IMAGE_TAG = "v${major}.${minor}.${patch}"
                        echo "üî¢ Calculated new version: ${env.IMAGE_TAG}"
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir("apps/${params.SERVICE}") {
                    sh '''#!/bin/bash
                    echo "üèóÔ∏è Building image ${DOCKERHUB_USER}/${SERVICE}:${IMAGE_TAG} in $(pwd)"
                    docker build -t ${DOCKERHUB_USER}/${SERVICE}:${IMAGE_TAG} .
                    '''
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_TOKEN')]) {
                    sh '''#!/bin/bash
                        echo $DOCKER_TOKEN | docker login -u $DOCKER_USER --password-stdin
                        docker push ${DOCKERHUB_USER}/${SERVICE}:${IMAGE_TAG}
                        docker tag ${DOCKERHUB_USER}/${SERVICE}:${IMAGE_TAG} ${DOCKERHUB_USER}/${SERVICE}:latest
                        docker push ${DOCKERHUB_USER}/${SERVICE}:latest
                        docker logout
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Build succeeded ‚Äî committing VERSION file update"
            dir("apps/${params.SERVICE}") {
                script {
                    // Write version only after success
                    writeFile file: env.VERSION_FILE, text: "${env.IMAGE_TAG}\n"
                }
                withCredentials([usernamePassword(credentialsId: 'github-creds', usernameVariable: 'GIT_USER', passwordVariable: 'GIT_TOKEN')]) {
                    sh '''#!/bin/bash
                      git config --global --add safe.directory "$PWD"
                      git config user.email "jenkins@local"
                      git config user.name "Jenkins CI"
                      git remote set-url origin https://${GIT_USER}:${GIT_TOKEN}@github.com/ranenachiket/k8s-app.git
                      git add VERSION
                      git commit -m "Bump version to $(cat VERSION) [ci skip]" || true
                      git push origin HEAD:main || true
                    '''
                }
            }
            echo "‚úÖ Successfully built and pushed ${DOCKERHUB_USER}/${params.SERVICE}:${IMAGE_TAG}"
        }

        failure {
            echo "‚ùå Build failed ‚Äî skipping version file update"
        }
    }
}
